<% provide(:title, "Woktop - Login") %>
<div class="row">
	<h1 class="large-6 large-centered columns text-center roboto lowercase text-normal text-super-large"><span class="black">Log</span><span class="green">in</span></h1>
</div>
<div class="row">
<%= form_tag '/login' do %>
	<% if @errors %><div class="error"><% end %>
		<div class="small-12 large-6 small-centered large-centered columns">
    		<%= text_field_tag :email, params[:email], placeholder: "Email address" %>
		</div>
	<% if @errors %></div><% end %>
	<% if @errors %><div class="error"><% end %>
		<div class="small-12 large-6 small-centered large-centered columns">
			<%= password_field_tag :password, params[:password], placeholder: "Password" %>
		</div>
	<% if @errors %></div><% end %>
		<div class="small-12 large-6 small-centered large-centered columns">
			<%= submit_tag "Wok n' woll!", class: "large button expand" %>
		</div>
<% end %>

	<div class="small-12 large-6 small-centered large-centered columns">
		<p class="text-center">Not yet signed up? <%= link_to "Join fo' free!", signup_path %></p>
	</div>
</div>